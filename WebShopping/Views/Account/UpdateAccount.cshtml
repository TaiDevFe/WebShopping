 @model AppUserModel

@{
	ViewData["Title"] = "Update Account";
}
<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form"> 
					<h2>Information Account</h2>
					<form autocomplete="off" asp-action="UpdateInfoAccount" asp-controller="Account" method="post">
					<input type="hidden" asp-for="Id"/>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					
						<div class="form-group">
							<label>Username</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly class="form-control"/>
							<span asp-validation-for="Email" class="text-danger" />						
						</div>
						<div class="form-group">
							<label>Phone Number</label>
							<input asp-for="PhoneNumber" required class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>	
						<div class="form-group">
							<label>Old Password</label>
							<input type="text" readonly value="@Model.PasswordHash" class="form-control" />
						</div>
						<div class="form-group">
							<label>New Password</label>
							<input type="text" name="PasswordHash" required class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>
						<div class="form-group">
							<button class="btn btn-default">Update</button>
						</div>						
					</form>
					
				</div><!--/sign up form-->
			</div>
		</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


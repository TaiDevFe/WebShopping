@{
    ViewData["title"] = "List Wishlist";
    var key = 0;
}
<h3>List Wishlist</h3>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price </th>
            <th scope="col">Product Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wishlist_product in Model)
        {
            key++;
            <tr>
                <td>@key</td>
                <td>@wishlist_product.Product.Name</td>
                <td>@wishlist_product.Product.Description</td>
                <td>@wishlist_product.Product.Price.ToString("#,##0 VNĐ")</td>
                <td><img src="~/images/@wishlist_product.Product.Image" width="100" /></td>
                <td>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteWishlist" asp-controller="Home" asp-route-Id="@wishlist_product.Wishlist.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


